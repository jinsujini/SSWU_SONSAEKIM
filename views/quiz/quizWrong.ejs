<%- include('../layouts/header') %>
<link rel="stylesheet" href="/css/learn/learnFrame.css">
<link rel="stylesheet" href="/css/quiz/quiz.css">
<link rel="stylesheet" href="/css/learn/wrong.css">


<div class="learn-container">
  <div class="learn-wrapper">
    <div class="wrong-tab-container"> <!--노란색 바-->
      <div class="wrong-label">오답 확인</div> <!--글씨-->
      <a href="/quiz/result" class="back">
        <img src="/assets/back.svg" alt="">
      </a>
    </div>

    <div class="learn-box">

      <!-- 학습메모 버튼 -->
      <button id="bookmark-btn" 
          data-word-id="" 
          data-source-type="">
        <img id="btn-img" src="/assets/empty_bookmark.svg" alt="북마크" />
      </button>

      <!-- 퀴즈 내용 -->
      <div class="learn-content">
        <img src="" alt="수어 이미지" id="quiz-image" />
        <div class="quiz-text">
          <p></p>
          <div class="quiz-options">
            <div class="quiz-row">
              <button class="quiz-btn"></button>
              <button class="quiz-btn">/button>
            </div>
            <div class="quiz-row">
              <button class="quiz-btn"></button>
            <button class="quiz-btn"></button>
            </div>
          </div>
        </div>
      </div>

      <!-- 이동 버튼 -->
      <div class="nav-buttons">
        <button class="nav-btn" id="prev-btn">
          <img src="/assets/left-btn.svg" alt="이전" />
          </button>
        <button class="nav-btn" id="next-btn">
          <img src="/assets/right-btn.svg" alt="다음" />
        </button>
      </div>

    </div>
  </div>
</div>

<script src="/js/quiz/bookmark.js"></script>
<script>
  window.wrongAnswers = <%- typeof wrongAnswers !== 'undefined' ? JSON.stringify(wrongAnswers) : 'undefined' %>;
</script>
<script src="/js/quiz/renderQuizWrong.js"></script>

<%- include('../layouts/footer') %>
