<%- include('../layouts/header') %>
<link rel="stylesheet" href="/css/game/start.css">
<div class="overlay" id="rankingModal">
  <div class="ranking-modal">
    <button class="modal-close" onclick="closeRanking()">×</button>

    <p class="my-score">나의 최고 점수: <span id="myBestScore">260점</span></p>

    <h2 class="modal-title">순위</h2>

    <div class="ranking-list">
      <% if (top3.length === 0) { %>
        <p>아직 등록된 기록이 없습니다.</p>
      <% } else { %>
        <% top3.forEach((record, index) => { %>
          <p><%= index + 1 %>등 사용자 <%= record.user_id %> <%= record.score %>점</p>
        <% }) %>
      <% } %>
    </div>
  </div>
</div>
<section class="game-box">
  <div class="title-box">
    <div class="word-card1">타</div>
    <div class="word-card2">자</div>
    <div class="word-card3">게</div>
    <div class="word-card4">임</div>
    <img src="/assets/gamearrow.svg" alt="화살표" class="arrow-icon" />
  </div>

  <div class="ranking" onclick="openRanking()">
    <img src="/assets/hand.svg" alt="손로고" />
    <span>순위 보기</span>
  </div>

  <div class="button-group">
    <button class="btn" onclick="location.href='/game/play'">게임 시작</button>
    <button class="btn">게임 방법</button>
  </div>
</section>
<script>
  function openRanking() {
    document.getElementById('rankingModal').style.display = 'flex';
  }

  function closeRanking() {
    document.getElementById('rankingModal').style.display = 'none';
  }
</script>

<%- include('../layouts/footer') %>
